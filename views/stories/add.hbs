<h3>Add Story</h3>
<div>
    <form action="/stories" method="POST">
        <section>
            <div class="left-margin">
                <label for="title">Title</label>
                <input class="formatting-input" type="text" name="title">
            </div>
        </section>

        <section>
            <div class="left-margin">
                <label for="status">Status</label>
                <select name="status" class="formatting-input">
                    <option  value="public" selected>Public</option>
                    <option value="private">Private</option>
                </select>
            </div>
        </section>

        <section>
            <div class="left-margin">
                <h5>Tell Us Your Story:</h5><br>
                <textarea name="body" class="formatting-input"></textarea>
            </div>
        </section>

        <section>
            <input type="submit" value="Save" class="formatting-input">
            <a href="/dashboard" class="formatting-input">Cancel</a>
        </section>
    </form>
</div>
