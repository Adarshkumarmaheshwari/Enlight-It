<h3>Edit Story</h3>
<article>
    <form action="/stories/{{story._id}}" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <section>
            <div class="left-margin">
                <label for="title">Title</label>
                <input class="formatting-input" type="text" name="title" value="{{story.title}}">
            </div>
        </section>

        <section>
            <div class="left-margin">
                <label for="status">Status</label>
                <select name="status" class="formatting-input">
                    {{#select story.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
            </div>
        </section>

        <section>
            <div class="left-margin">
                <h5>Tell Us Your Story:</h5>
                <textarea name="body" class="formatting-input">{{story.body}}</textarea>
            </div>
        </section>

        <section>
            <input type="submit" value="Save" class="formatting-input">
            <a href="/dashboard" class="formatting-input">Cancel</a>
        </section>
    </form>
</article>
